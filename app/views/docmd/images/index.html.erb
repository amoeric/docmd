<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
  <!-- 使用說明 -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
    <h3 class="text-sm font-semibold text-blue-900 mb-2">使用說明</h3>
    <div class="space-y-2 text-sm text-blue-800">
      <div>
        <strong>在 Markdown 中插入圖片：</strong>
        <code class="bg-white px-2 py-1 rounded border border-blue-200">![圖片描述](/docmd/images/圖片路徑)</code>
      </div>
      <div>
        <strong>圖片存放位置：</strong>
        <code class="bg-white px-2 py-1 rounded border border-blue-200">docs/assets/images/</code>
      </div>
      <div>
        <strong>支援格式：</strong>
        <span class="text-blue-700">JPG, PNG, GIF, SVG, WebP</span>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-900">圖片管理</h2>
        <div class="flex space-x-3">
          <%= link_to new_image_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue-600 text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            上傳圖片
          <% end %>
          <%= link_to docs_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 border border-gray-200 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            文件列表
          <% end %>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @images.any? %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% @images.each do |image| %>
            <div class="bg-gray-50 rounded-lg overflow-hidden shadow hover:shadow-lg transition">
              <!-- 圖片預覽 -->
              <div class="aspect-w-16 aspect-h-9 bg-gray-200">
                <%= link_to image.url, target: "_blank" do %>
                  <%= image_tag image.url,
                      alt: image.alt_text,
                      class: "w-full h-48 object-cover cursor-pointer hover:opacity-90 transition-opacity",
                      loading: "lazy" %>
                <% end %>
              </div>

              <!-- 圖片資訊 -->
              <div class="p-3">
                <p class="text-sm font-medium text-gray-900 truncate" title="<%= image.filename %>">
                  <%= image.filename %>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= image.info[:size_formatted] %>
                </p>

                <!-- 操作按鈕 -->
                <div class="mt-3 flex flex-wrap gap-2">
                  <!-- 複製 Markdown 語法 -->
                  <button onclick="copyToClipboard('<%= escape_javascript(image.markdown_syntax) %>')"
                          class="text-xs px-2.5 py-1.5 font-medium rounded-lg bg-blue-600 text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-blue-500 transition-all duration-200"
                          title="複製 Markdown 語法">
                    MD
                  </button>

                  <!-- 複製 URL -->
                  <button onclick="copyToClipboard('<%= image.url %>')"
                          class="text-xs px-2.5 py-1.5 font-medium rounded-lg bg-green-600 text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-green-500 transition-all duration-200"
                          title="複製圖片 URL">
                    URL
                  </button>

                  <!-- 刪除 -->
                  <%= form_with url: image_file_path(path: image.path),
                               method: :delete,
                               class: "inline delete-form" do |f| %>
                    <%= f.submit "刪除",
                        onclick: "return confirm('確定要刪除此圖片嗎？');",
                        class: "text-xs px-2.5 py-1.5 font-medium rounded-lg bg-red-600 text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-red-500 transition-all duration-200 cursor-pointer border-0" %>
                  <% end %>
                </div>

                <!-- 路徑資訊 -->
                <div class="mt-2 text-xs text-gray-400 truncate" title="<%= image.path %>">
                  <%= image.path %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 統計資訊 -->
        <div class="mt-8 text-center text-sm text-gray-500">
          共 <%= @images.size %> 張圖片
        </div>
      <% else %>
        <div class="text-center py-12 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="mb-4">目前沒有任何圖片</p>
          <%= link_to "上傳第一張圖片", new_image_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue-600 text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      // 顯示複製成功的提示
      const toast = document.createElement('div');
      toast.textContent = '已複製到剪貼簿';
      toast.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50';
      document.body.appendChild(toast);

      setTimeout(() => {
        toast.remove();
      }, 2000);
    });
  }
</script>