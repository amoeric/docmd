<!-- 加入 Tailwind CSS 4 CDN -->
<% content_for :head do %>
  <script src="https://cdn.tailwindcss.com"></script>
<% end %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-900">圖片管理</h2>
        <div class="flex space-x-3">
          <%= link_to "上傳圖片", new_image_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
          <%= link_to "文件列表", docs_path, class: "text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @images.any? %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% @images.each do |image| %>
            <div class="bg-gray-50 rounded-lg overflow-hidden shadow hover:shadow-lg transition">
              <!-- 圖片預覽 -->
              <div class="aspect-w-16 aspect-h-9 bg-gray-200">
                <%= image_tag image.url,
                    alt: image.alt_text,
                    class: "w-full h-48 object-cover",
                    loading: "lazy" %>
              </div>

              <!-- 圖片資訊 -->
              <div class="p-3">
                <p class="text-sm font-medium text-gray-900 truncate" title="<%= image.filename %>">
                  <%= image.filename %>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= image.info[:size_formatted] %>
                </p>

                <!-- 操作按鈕 -->
                <div class="mt-3 flex flex-wrap gap-2">
                  <!-- 複製 Markdown 語法 -->
                  <button onclick="copyToClipboard('<%= escape_javascript(image.markdown_syntax) %>')"
                          class="text-xs px-2 py-1 bg-blue-100 text-blue-700 rounded hover:bg-blue-200"
                          title="複製 Markdown 語法">
                    MD
                  </button>

                  <!-- 複製 URL -->
                  <button onclick="copyToClipboard('<%= image.url %>')"
                          class="text-xs px-2 py-1 bg-green-100 text-green-700 rounded hover:bg-green-200"
                          title="複製圖片 URL">
                    URL
                  </button>

                  <!-- 刪除 -->
                  <%= form_with url: image_file_path(path: image.path),
                               method: :delete,
                               class: "inline delete-form" do |f| %>
                    <%= f.submit "刪除",
                        onclick: "return confirm('確定要刪除此圖片嗎？');",
                        class: "text-xs px-2 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200 cursor-pointer border-0" %>
                  <% end %>
                </div>

                <!-- 路徑資訊 -->
                <div class="mt-2 text-xs text-gray-400 truncate" title="<%= image.path %>">
                  <%= image.path %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 統計資訊 -->
        <div class="mt-8 text-center text-sm text-gray-500">
          共 <%= @images.size %> 張圖片
        </div>
      <% else %>
        <div class="text-center py-12 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="mb-4">目前沒有任何圖片</p>
          <%= link_to "上傳第一張圖片", new_image_path, class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 使用說明 -->
  <div class="mt-8 bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b">
      <h3 class="text-lg font-semibold text-gray-900">使用說明</h3>
    </div>
    <div class="px-6 py-4 space-y-3 text-sm text-gray-600">
      <div>
        <strong>在 Markdown 中插入圖片：</strong>
        <code class="bg-gray-100 px-2 py-1 rounded">![圖片描述](/docmd/images/圖片路徑)</code>
      </div>
      <div>
        <strong>圖片存放位置：</strong>
        <code class="bg-gray-100 px-2 py-1 rounded">docs/assets/images/</code>
      </div>
      <div>
        <strong>支援格式：</strong>
        <span class="text-gray-500">JPG, PNG, GIF, SVG, WebP</span>
      </div>
    </div>
  </div>
</div>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      // 顯示複製成功的提示
      const toast = document.createElement('div');
      toast.textContent = '已複製到剪貼簿';
      toast.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50';
      document.body.appendChild(toast);

      setTimeout(() => {
        toast.remove();
      }, 2000);
    });
  }
</script>