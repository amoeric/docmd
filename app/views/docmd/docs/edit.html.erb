<div class="flex h-screen bg-gray-100 min-w-[1280px]">
  <!-- 左側：編輯表單 -->
  <div class="w-1/2 min-w-[640px] overflow-y-auto bg-white shadow-lg">
    <div class="sticky top-0 bg-white border-b px-6 py-4 z-10">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-900">編輯文件</h2>
        <%= link_to doc_path(@doc.slug), class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition duration-150" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          返回
        <% end %>
      </div>
    </div>

    <div class="px-6 py-4">
      <%= form_with scope: :doc,
                    url: doc_path(@doc.slug),
                    method: :patch,
                    id: "edit_form",
                    data: { turbo: true } do |form| %>

        <%= render 'form', form: form %>

        <div class="mt-6 sticky bottom-0 bg-white border-t pt-4 pb-4">
          <div class="flex items-center space-x-4">
            <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue-600 text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V2"></path>
              </svg>
              更新文件
            </button>
            <!-- 預覽按鈕：使用 formaction 提交到不同的 action，並指定 turbo_frame -->
            <button type="submit"
                formaction="<%= preview_docs_path %>"
                formmethod="post"
                data-turbo-frame="doc_preview"
                class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-amber-600 text-white shadow-sm hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-all duration-200">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              預覽
            </button>
            <%= link_to doc_path(@doc.slug), class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 border border-gray-200 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              取消
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 右側：預覽區域 -->
  <div class="w-1/2 min-w-[640px] overflow-y-auto bg-gray-50 border-l">
    <div class="sticky top-0 bg-white border-b px-6 py-4 z-10">
      <h3 class="text-xl font-semibold text-gray-700">預覽區</h3>
      <p class="text-sm text-gray-500 mt-1">點擊「預覽」按鈕查看文件效果</p>
    </div>

    <div class="px-6 py-4">
      <!-- Turbo Frame 用於顯示預覽內容 -->
      <%= turbo_frame_tag "doc_preview" do %>
        <div class="text-center py-12 text-gray-400">
          <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="mt-4">點擊左側的「預覽」按鈕<br>查看文件渲染效果</p>
        </div>
      <% end %>
    </div>
  </div>
</div>