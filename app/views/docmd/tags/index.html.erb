<!-- 加入 Tailwind CSS 4 CDN -->
<% content_for :head do %>
  <script src="https://cdn.tailwindcss.com"></script>
<% end %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-900">標籤雲</h2>
        <%= link_to "所有文件", docs_path, class: "text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <div class="px-6 py-8">
      <% if @tags.any? %>
        <div class="flex flex-wrap gap-4">
          <% @tags.each do |tag, count| %>
            <%
              # 根據文件數量決定標籤大小
              size_class = case count
                          when 1 then "text-base"
                          when 2..3 then "text-lg"
                          when 4..6 then "text-xl"
                          when 7..10 then "text-2xl"
                          else "text-3xl"
                          end

              # 根據文件數量決定顏色深淺
              color_class = case count
                           when 1 then "bg-blue-100 text-blue-700 hover:bg-blue-200"
                           when 2..3 then "bg-blue-200 text-blue-800 hover:bg-blue-300"
                           when 4..6 then "bg-blue-300 text-blue-900 hover:bg-blue-400"
                           when 7..10 then "bg-blue-400 text-white hover:bg-blue-500"
                           else "bg-blue-500 text-white hover:bg-blue-600"
                           end
            %>
            <%= link_to tag_path(tag),
                class: "inline-flex items-center px-4 py-2 rounded-full #{color_class} #{size_class} font-medium transition-colors" do %>
              <%= tag %>
              <span class="ml-2 text-sm opacity-75">(<%= count %>)</span>
            <% end %>
          <% end %>
        </div>

        <div class="mt-12 border-t pt-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">所有標籤列表</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @tags.each do |tag, count| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                <%= link_to tag, tag_path(tag), class: "text-blue-600 hover:text-blue-800 font-medium" %>
                <span class="text-sm text-gray-500">
                  <%= pluralize(count, '篇文件') %>
                </span>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-8 text-center text-sm text-gray-500">
          共 <%= @tags.size %> 個標籤，<%= @tags.sum { |_, count| count } %> 篇文件
        </div>
      <% else %>
        <div class="text-center py-12 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          <p class="mb-4">目前沒有任何標籤</p>
          <%= link_to "建立第一個文件", new_doc_path, class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>